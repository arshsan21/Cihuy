--[[
    AUTO SPAM CHAT - Delta Executor
    Fitur: Edit Text, Delay, Run/Stop
]]

-- Load screen
local player = game:GetService("Players").LocalPlayer
local gui = Instance.new("ScreenGui")
local frame = Instance.new("Frame")
local title = Instance.new("TextLabel")
local txtPesan = Instance.new("TextBox")
local txtDelay = Instance.new("TextBox")
local btnRun = Instance.new("TextButton")
local btnStop = Instance.new("TextButton")
local status = Instance.new("TextLabel")

-- Setup GUI
gui.Name = "SpamChat"
gui.Parent = game:GetService("CoreGui")
gui.ResetOnSpawn = false

-- Frame utama
frame.Parent = gui
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BorderSizePixel = 2
frame.BorderColor3 = Color3.fromRGB(255, 0, 0)
frame.Position = UDim2.new(0.7, 0, 0.3, 0)
frame.Size = UDim2.new(0, 300, 0, 200)
frame.Active = true
frame.Draggable = true

-- Judul
title.Parent = frame
title.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
title.Size = UDim2.new(1, 0, 0, 30)
title.Font = Enum.Font.SourceSansBold
title.Text = "AUTO SPAM CHAT"
title.TextColor3 = Color3.fromRGB(255, 0, 0)
title.TextSize = 20

-- Label Pesan
local lblPesan = Instance.new("TextLabel")
lblPesan.Parent = frame
lblPesan.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
lblPesan.Position = UDim2.new(0, 10, 0, 40)
lblPesan.Size = UDim2.new(0, 50, 0, 25)
lblPesan.Font = Enum.Font.SourceSans
lblPesan.Text = "Pesan:"
lblPesan.TextColor3 = Color3.fromRGB(255, 255, 255)
lblPesan.TextSize = 16

-- TextBox Pesan
txtPesan.Parent = frame
